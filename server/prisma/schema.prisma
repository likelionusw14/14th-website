generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  GUEST
  BABY_LION
  ADMIN
}

enum Track {
  FRONTEND
  BACKEND
  DESIGN
  PM
}

model User {
  id              Int          @id @default(autoincrement())
  studentId       String       @unique
  password        String
  name            String?
  major           String?      // Department/Major from Portal
  role            Role         @default(GUEST)
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  
  application     Application?
  attendances     Attendance[]
  createdSessions Session[]    @relation("SessionCreator")
}

model Application {
  id                      Int       @id @default(autoincrement())
  userId                  Int       @unique
  track                   Track
  content                 String    // JSON string or long text
  status                  String    @default("PENDING") // PENDING, DOCUMENT_APPROVED, INTERVIEW_APPROVED, REJECTED
  phoneLastDigits         String?   // 전화번호 뒷자리 (4자리)
  interviewPreferences    String?   // JSON: { date: "2024-02-23", times: [{ priority: 1, time: "13:00" }, ...] }
  confirmedInterviewDate  DateTime? // 확정된 면접 날짜
  confirmedInterviewTime  String?   // 확정된 면접 시간 (예: "13:00")
  createdAt               DateTime  @default(now())
  updatedAt               DateTime  @updatedAt
  
  user                    User      @relation(fields: [userId], references: [id])
}

model Session {
  id          Int          @id @default(autoincrement())
  code        String       @unique
  description String?
  openTime    DateTime     @default(now())
  isActive    Boolean      @default(true)
  createdBy   Int?
  
  attendances Attendance[]
  creator     User?        @relation("SessionCreator", fields: [createdBy], references: [id])
}

model Attendance {
  id        Int      @id @default(autoincrement())
  sessionId Int
  userId    Int
  status    String   @default("PRESENT") // PRESENT, LATE, ABSENT
  timestamp DateTime @default(now())
  
  session   Session  @relation(fields: [sessionId], references: [id])
  user      User     @relation(fields: [userId], references: [id])

  @@unique([sessionId, userId])
}

model ApplicationSettings {
  id              Int      @id @default(autoincrement())
  resultOpenDate  DateTime // 결과 공개 날짜
  googleFormUrl   String?  // 구글폼 링크
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
