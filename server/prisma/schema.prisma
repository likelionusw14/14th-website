generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  GUEST
  BABY_LION
  ADMIN
}

enum Track {
  FRONTEND
  BACKEND
}

model User {
  id              Int          @id @default(autoincrement())
  studentId       String       @unique
  password        String
  name            String?
  major           String?      // Department/Major from Portal
  role            Role         @default(GUEST)
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  
  application     Application?
  attendances     Attendance[]
  createdSessions Session[]    @relation("SessionCreator")
}

model Application {
  id        Int      @id @default(autoincrement())
  userId    Int      @unique
  track     Track
  content   String   // JSON string or long text
  status    String   @default("PENDING") // PENDING, APPROVED, REJECTED
  createdAt DateTime @default(now())
  
  user      User     @relation(fields: [userId], references: [id])
}

model Session {
  id          Int          @id @default(autoincrement())
  code        String       @unique
  description String?
  openTime    DateTime     @default(now())
  isActive    Boolean      @default(true)
  createdBy   Int?
  
  attendances Attendance[]
  creator     User?        @relation("SessionCreator", fields: [createdBy], references: [id])
}

model Attendance {
  id        Int      @id @default(autoincrement())
  sessionId Int
  userId    Int
  status    String   @default("PRESENT") // PRESENT, LATE, ABSENT
  timestamp DateTime @default(now())
  
  session   Session  @relation(fields: [sessionId], references: [id])
  user      User     @relation(fields: [userId], references: [id])

  @@unique([sessionId, userId])
}
